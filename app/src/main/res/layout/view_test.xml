<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageView"
                android:layout_width="@dimen/width0"
                android:layout_height="200dp"
                android:layout_marginHorizontal="@dimen/margin16"
                app:cardBackgroundColor="@color/white_FFFFFFFF"
                app:cardCornerRadius="@dimen/corner20"
                app:cardElevation="@dimen/elevation5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/containerTopAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin16"
                android:layout_marginTop="@dimen/margin16"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/answer_one"
                    style="@style/OutlinedButtonTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start|center"
                    app:backgroundTint="@color/white_FFFFFFFF"
                    app:elevation="@dimen/elevation5"
                    tools:text="Лигатурная игла Дешана" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/answer_two"
                    style="@style/OutlinedButtonTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin16"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start|center"
                    app:backgroundTint="@color/white_FFFFFFFF"
                    app:elevation="@dimen/elevation5"
                    tools:text="Лигатурная игла Дешана" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/answer_three"
                    style="@style/OutlinedButtonTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin16"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat_medium"
                    app:backgroundTint="@color/white_FFFFFFFF"
                    app:elevation="@dimen/elevation5"
                    tools:text="Лигатурная игла Дешана" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/answer_four"
                    style="@style/OutlinedButtonTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_marginTop="@dimen/margin16"
                    android:fontFamily="@font/montserrat_medium"
                    app:backgroundTint="@color/white_FFFFFFFF"
                    app:elevation="@dimen/elevation5"
                    tools:text="Лигатурная игла Дешана" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/select"
            style="@style/OnlyTextSelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:text="@string/testSelect"
            android:textSize="@dimen/size16"
            android:fontFamily="@font/montserrat_medium"
            android:textStyle="normal"
            android:enabled="false"
            app:cornerRadius="@dimen/size10"
            app:icon="@drawable/ic_arrow_begin"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/blue_5B67CA" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>