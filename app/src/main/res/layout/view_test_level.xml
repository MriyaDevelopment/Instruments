<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height100"
    android:layout_marginHorizontal="@dimen/margin16"
    app:rippleColor="@color/blue_5B67CA"
    android:layout_marginBottom="@dimen/margin24"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/corner15">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/blue_405B67CA">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin23"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_easy" />

        <TextView
            android:id="@+id/nameTest"
            style="@style/TextDarkNormal16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size17"
            android:layout_marginTop="@dimen/size18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Легкий уровень" />

        <TextView
            android:id="@+id/count"
            style="@style/Text50DarkNormal14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="15 вопросов"
            app:layout_constraintEnd_toEndOf="@+id/nameTest"
            app:layout_constraintStart_toStartOf="@+id/nameTest"
            app:layout_constraintTop_toBottomOf="@+id/nameTest" />

        <TextView
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding3"
            android:text="@string/testLevelChangeCategory"
            android:textSize="@dimen/size10"
            android:textStyle="normal"
            android:layout_marginEnd="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin9"
            app:drawableEndCompat="@drawable/ic_arrow_easy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:textColor="@color/blue_5B67CA" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>