<resources>

    <style name="BnvTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size12</item>
    </style>
    
    <style name="TextWhiteNormalStyle">
        <item name="android:textColor">@color/white_FFFFFFFF</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">@dimen/height19</item>
        <item name="fontStyle">normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyleMiniCategory">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="lineHeight">@dimen/height14</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextBlueNormalStyle">
        <item name="lineHeight">@dimen/height17</item>
        <item name="android:textColor">@color/blue_5B67CA</item>
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextBlueBoldStyle">
        <item name="lineHeight">@dimen/height19</item>
        <item name="android:textColor">@color/blue_5B67CA</item>
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextDarkNormalStyle">
        <item name="lineHeight">@dimen/height17</item>
        <item name="android:textColor">@color/dark_1E1F25</item>
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Text50DarkNormalStyle">
        <item name="lineHeight">@dimen/height17</item>
        <item name="android:textColor">@color/dark_801E1F25</item>
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextDarkBoldStyle">
        <item name="lineHeight">@dimen/height17</item>
        <item name="android:textColor">@color/dark_1E1F25</item>
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="DefaultBlueButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white_FFFFFFFF</item>
        <item name="android:insetTop">@dimen/padding0</item>
        <item name="android:insetBottom">@dimen/padding0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:backgroundTint">@color/background_default_button</item>
        <item name="cornerRadius">@dimen/corner14</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">@dimen/height17</item>
    </style>

    <style name="OnlyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/black</item>
        <item name="lineHeight">@dimen/height17</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">@dimen/padding0</item>
        <item name="android:insetBottom">@dimen/padding0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="iconPadding">@dimen/padding8</item>
        <item name="android:textSize">@dimen/size14</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/background_default_button</item>
        <item name="strokeColor">@color/background_default_button</item>
        <item name="strokeWidth">@dimen/width2</item>
        <item name="rippleColor">@color/blue_5B67CA</item>
        <item name="android:insetTop">@dimen/elevation0</item>
        <item name="android:insetBottom">@dimen/elevation0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/size10</item>
        <item name="cornerRadius">@dimen/corner8</item>
    </style>

    <style name="OutlinedButtonTest" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_1E1F25</item>
        <item name="strokeColor">@color/background_default_button</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="rippleColor">@color/blue_5B67CA</item>
        <item name="android:insetTop">@dimen/elevation0</item>
        <item name="android:insetBottom">@dimen/elevation0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="cornerRadius">@dimen/corner8</item>
    </style>

    <style name="AnimationDialog">
        <item name="android:windowEnterAnimation">@anim/anim_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_out_dialog</item>
    </style>

    <style name="BaseCheckBoxStyle">
        <item name="android:button">@drawable/chk_selector</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="lineHeight">@dimen/height17</item>
        <item name="fontWeight">400</item>
        <item name="android:paddingLeft">@dimen/padding20</item>
        <item name="android:textColor">@color/dark_1E1F25</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Default.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_FFFFFFFF</item>
        <item name="android:elevation">@dimen/elevation0</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/blue_5B67CA</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">@dimen/height17</item>
        <item name="fontWeight">500</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/background_input</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="hintTextAppearance">@style/TextHintAppearance</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/blue_5B67CA</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:backgroundTint">@color/background_input</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextHintAppearance</item>
        <item name="android:textColorHint">@color/light_blue_B2B7E4</item>
        <item name="android:paddingStart">@dimen/padding0</item>
        <item name="android:paddingEnd">@dimen/padding0</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="Widget.AppCompat.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">@dimen/padding0</item>
        <item name="android:insetTop">@dimen/padding0</item>
        <item name="android:insetBottom">@dimen/padding0</item>
        <item name="android:paddingLeft">@dimen/padding2</item>
        <item name="android:paddingRight">@dimen/padding2</item>
        <item name="android:minWidth">@dimen/width24</item>
        <item name="android:minHeight">@dimen/height24</item>
        <item name="iconGravity">textStart</item>
        <item name="background">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/corner6</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextHintAppearance">
        <item name="android:textSize">@dimen/size16</item>
        <item name="lineHeight">@dimen/height17</item>
    </style>
</resources>