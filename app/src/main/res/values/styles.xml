<resources>

    <style name="TextDarkNormalStyle">
        <item name="lineHeight">17dp</item>
        <item name="android:textColor">@color/dark_1E1F25</item>
        <item name="android:textStyle">normal</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="DefaultBlueButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white_FFFFFFFF</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:backgroundTint">@color/background_default_button</item>
        <item name="cornerRadius">@dimen/corner14</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">17dp</item>
    </style>

    <style name="OnlyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/black</item>
        <item name="lineHeight">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="iconPadding">@dimen/padding8</item>
        <item name="android:textSize">@dimen/size14</item>
    </style>

    <style name="Default.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_FFFFFFFF</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/blue_5B67CA</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">17dp</item>
        <item name="fontWeight">500</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextInputLayout" >
        <item name="android:textColorHint">@color/light_blue_B2B7E4</item>
        <item name="hintTextColor">@color/light_blue_B2B7E4</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="TextHintAppearance">
        <item name="android:textSize">@dimen/size16</item>
        <item name="lineHeight">17dp</item>
    </style>
</resources>